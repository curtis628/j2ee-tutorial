<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.1">

    <persistence-unit name="TutorialPU" transaction-type="JTA">
        <!-- Datasource defined in WildFly -->
        <jta-data-source>java:jboss/datasources/TutorialDS</jta-data-source>

        <class>net.tcurt.j2eetutorial.entity.Employee</class>
        <class>net.tcurt.j2eetutorial.entity.Job</class>
        <class>net.tcurt.j2eetutorial.entity.Grade</class>

        <properties>
            <!-- Let Hibernate create schema automatically -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <!-- Show SQL in logs -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>

